<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Check_update_necessity</name>
        <label>Check update necessity</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Skip</defaultConnectorLabel>
        <rules>
            <name>Mark_Released</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.copadoQuality__Release__r.copado__Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Planned</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.copadoQuality__Review_Environment__r.Name</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Prod</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Release</targetReference>
            </connector>
            <label>Mark Released</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <interviewLabel>Change Release Status based on Outcome {!$Flow.CurrentDateTime}</interviewLabel>
    <isTemplate>true</isTemplate>
    <label>Change Release Status based on Outcome</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Release</name>
        <label>Update Release</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>copado__Status__c</field>
            <value>
                <stringValue>Released</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record.copadoQuality__Release__r</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_update_necessity</targetReference>
        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterLogic>1 AND (2 OR 3)</filterLogic>
        <filters>
            <field>copadoQuality__Release__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>copadoQuality__Outcome__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Passed</stringValue>
            </value>
        </filters>
        <filters>
            <field>copadoQuality__Outcome__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Passed with Findings</stringValue>
            </value>
        </filters>
        <object>copadoQuality__Functional_Review__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Draft</status>
</Flow>
