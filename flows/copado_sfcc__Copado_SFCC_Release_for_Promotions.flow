<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Ensures that if a User Story has a Release, the Promotion shares it as well</description>
    <environments>Default</environments>
    <interviewLabel>Copado SFCC Release for Promotions {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Copado SFCC Release for Promotions</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Promotion_Release_Field</name>
        <label>Update Promotion.Release Field</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <inputAssignments>
            <field>copado__Release__c</field>
            <value>
                <elementReference>$Record.copado__User_Story__r.copado__Release__c</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record.copado__Promotion__r</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Promotion_Release_Field</targetReference>
        </connector>
        <filterFormula>ISPICKVAL({!$Record.copado__Promotion__r.copado__Project__r.copado__Deployment_Flow__r.copado__Platform__c}, &quot;copado_sfcc&quot;) &amp;&amp;
NOT(ISNULL({!$Record.copado__User_Story__r.copado__Release__c}))</filterFormula>
        <object>copado__Promoted_User_Story__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
